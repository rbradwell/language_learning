{
    "name": "language-learning-backend",
    "version": "1.0.0",
    "description": "Backend for language learning app",
    "main": "app.js",
    "scripts": {
        "start": "node app.js",
        "dev": "nodemon app.js",
        "dev:env": "nodemon --env-file=.env app.js",
        "prod": "NODE_ENV=production node app.js",
        "test": "jest",
